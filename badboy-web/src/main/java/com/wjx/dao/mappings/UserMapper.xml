<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wjx.dao.UserMapper">
    <select id="findById" parameterType="String" resultType="com.wjx.entity.User">
        select * from user where id=#{id}
    </select>
        
    <select id="findLoginName" parameterType="String" resultType="com.wjx.entity.Register">
        select login_name,user_id from register where phone=#{name} or email=#{name} or login_name=#{name}
    </select>
    
    <insert id="addReg" parameterType="com.wjx.entity.Register">
    	insert into register values(#{id},#{user_id},#{phone},#{email},#{login_name},#{password},#{register_time})
    </insert>
    
    <insert id="addUserId" parameterType="String">
    	insert into user(id) values(#{id})
    </insert>
    
    <select id="existPhone" parameterType="String" resultType="com.wjx.entity.Register">
    	select * from register where phone=#{phone}
    </select>
    
    <select id="existEmail" parameterType="String" resultType="com.wjx.entity.Register">
    	select * from register where email=#{email}
    </select>
    
    <select id="checkLogin" resultType="com.wjx.entity.Register">
    	select * from register where (phone=#{0} or email=#{0} or login_name=#{0}) and password=#{1}
    </select>
    
    <update id="UpdateUser" parameterType="com.wjx.entity.User">
    	update user set username=#{username},age=#{age},gender=#{gender},
    	<if test="photo!=null and photo!=''">  
        	 photo=#{photo},
        </if>
    	region=#{region},autograph=#{autograph},login_name=#{login_name} 
    	where id=#{id}    	
    </update>
</mapper>