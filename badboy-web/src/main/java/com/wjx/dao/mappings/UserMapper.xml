<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wjx.dao.UserMapper">
    <select id="findById" parameterType="Integer" resultType="com.wjx.entity.User">
        select * from user where id=#{id}
    </select>
        
    <insert id="addReg" parameterType="com.wjx.entity.Register">
    	insert into register values(#{id},#{user_id},#{phone},#{email},#{login_name},#{password},#{register_time})
    </insert>
    
    <insert id="addUserId" parameterType="String">
    	insert into user(id) values(#{id})
    </insert>
    
    <select id="checkReg" parameterType="String" resultType="com.wjx.entity.Register">
    	select * from register where phone=#{name} or email=#{name} or login_name=#{name}
    </select>
    
    <select id="checkLogin" resultType="com.wjx.entity.Register">
    	select * from register where (phone=#{0} or email=#{0} or login_name=#{0}) and password=#{1}
    </select>
</mapper>